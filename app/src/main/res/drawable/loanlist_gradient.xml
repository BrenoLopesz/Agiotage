<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item
        android:gravity="bottom">
        <shape
            android:shape="rectangle">
            <solid android:color="#707070"/>
        </shape>
    </item>
    <item
        android:gravity="top"
        android:bottom="1dp">
        <shape
            android:shape="rectangle">
            <gradient
                android:angle="0"
                android:endColor="#6E0740"
                android:startColor="#CA596B"
                android:type="linear" />
        </shape>
    </item>
</layer-list>